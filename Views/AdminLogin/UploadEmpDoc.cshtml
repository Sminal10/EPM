
@{
    ViewData["Title"] = "UploadEmpDoc";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-md-4">
    <label for="ddlGndr" id="lblGender">Select Employee</label>
    <select class="form-control" id="ddlempdetail">
        <option selected value="0">Select Gender</option>
        <option value="male">Male</option>
        <option value="female">Female</option>
        <option value="others">Others</option>
    </select>
</div>


<script>

    $(document).ready(function () {
        //alert("Hello Aditya");
        GetEmpDetails();
    })

    function GetEmpDetails() {
        $("#ddlempdetail").html('');
        var strdata = '';
        jQuery.support.cors = true;
        $.ajax({
            url: '/api/APIDDLEmpName/GetEmpNames',
            type: 'GET',
            contentType: 'application/json',
            success: function (data) {
                var sr = 0;
                $.each(data, function (key, item) {
                    sr += 1;
                    strdata = '<option selected value="0">Select Gender</option>' +
                        '<option value = "' + item.empid + '" > ' + item.fname + " " + item.mname + " " + item.lname + '</option >'
                    $("#ddlempdetail").append(strdata);
                }); 
            },
            error: function (jqXHR, textStatus, err) {
                alert(err);
            }
        })
    }
</script>
